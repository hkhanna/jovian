  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "runserver",
        "`source \"${workspaceFolder}/.env\"; echo ${WEB_PORT}`"
      ],
      "django": true,
      "justMyCode": false
    },
    {
      "name": "Python: Django Debug Tests",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "purpose": ["debug-test"],
      "args": ["runserver"],
      "django": true,
      "justMyCode": false
    }
  ]
}
